<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  
  <div class="field">
  <%= f.text_field :tag_tokens, 
             :id => "post_tags", 
             "data-pre" => @post.tag_list.map {|tag| {:id => tag, :name => tag } }.to_json %>
  </div>
  
<div class="field">
  <%= check_box("post", "published" ) %>
  <%= "Publish post" %>
</div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
